<div class="row">
  <div class="col-md-12">
    <%= link_to("清空购物车",clean_carts_path ,
                method: :delete , class: "pull-right",
                style:"text-decoration: uderline;",
                data: {confirm:"你确定清空整个购物车吗"} )%>

    <h2> 购物车 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
                 <%= f.select :quantity, 1..cart_item.product.quantity %>
                 <%= f.submit "更新", data: { disable_with: "Submiting..." } %>
              <% end %>
            </td>
            <td>
               <%= link_to cart_item_path(cart_item.product_id), method: :delete do %>
                 <i class="fa fa-trash"></i>
               <% end %>
            </td>

          </tr>
        <% end %>

      </tbody>
    </table>

    <hr>


    <div class="">
      <%  @coupons.each do |c| %>
      <div class="">
        暗号：<%= c.code %> 功能：<%= c.description %><br>
        有效期：<%= c.valid_from %>到<%= c.valid_until %>
      </div>

      <% end %>
    </div>

    <%= simple_form_for current_cart, url: cart_path(current_cart) do |f| %>
       <%= f.input :code %>
       <%= f.submit "确认使用",data: { disable_with: "Submiting..." } %>
    <% end %>
    正在使用暗号为<b><%=current_cart.code %></b>的优惠券
    <div class="total clearfix">
      <span class="pull-right">
        商品总计<%= render_cart_total_price(current_cart)%>RMB
      </span>
    </div>
    <div class="total clearfix">
    <span class="pull-right">
      实付金额<%= render_cart_turetotal_price(current_cart) %>RMB
    </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("确认结账", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
